require 'rubygems'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "liquicap"
    gemspec.summary = "Liquibase migrations with Capistrano"
    gemspec.description = "Capistrano integration for running Java Liquibase updates on remote hosts."
    gemspec.email = "ian.enders@gmail.com"
    gemspec.homepage = "http://github.com/ienders/liquicap"
    gemspec.authors = ["Ian Enders"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
